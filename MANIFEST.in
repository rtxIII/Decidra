# Include license and documentation
include LICENSE
include README.md
include CHANGELOG.md
include requirements.txt
include pyproject.toml

# Include configuration templates
recursive-include config *.ini *.yaml *.yml *.json

# Include static assets and data files
recursive-include src *.txt *.md *.json *.yaml *.yml *.ini *.toml *.css

# Exclude runtime, test, and build artifacts
recursive-exclude src/.runtime *
recursive-exclude src/tests *
recursive-exclude src/examples *
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*

# Exclude development and CI files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude .cursorignore
exclude .cursorrules
exclude CLAUDE.md
